{
  "name": "@arc/solid-i18n",
  "version": "0.1.0",
  "description": "A lightweight, type-safe internationalization library for SolidJS applications",
  "type": "module",
  "main": "./dist/solid-i18n.cjs.js",
  "module": "./dist/solid-i18n.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/solid-i18n.es.js",
      "require": "./dist/solid-i18n.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "solid",
    "solidjs",
    "i18n",
    "internationalization",
    "translation",
    "typescript"
  ],
  "author": "Arcbjorn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcbjorn/solid-i18n"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "3.0.5",
    "eslint": "^9.20.1",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^15.15.0",
    "jsdom": "^26.0.0",
    "prettier": "3.5.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.0.0",
    "vite-plugin-solid": "^2.11.1",
    "vitest": "^3.0.5"
  }
}